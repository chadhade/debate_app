function toggleTopic(position, formtype) {

	if(position.value == "vs") {
		$('#topicform').hide();
		$('#versusform').show();
		if(formtype=="topicform") {position.value = ""};
	}
	else {
		$('#topicform').show();
		$('#versusform').hide();
		if(formtype=="versusform") {position.value = "vs"};
	}
}


