window.onbeforeunload = OnBeforeUnLoad;
function OnBeforeUnLoad () {
	
	if(debater_waiting != true && debater_participant == true) { 
		//$.getScript(window.location.pathname + "/leaving.js");
		path_url = window.location.pathname + "/leaving.js"
		$.ajax({
		  url: path_url,
		  async: false,
		  dataType: "script",
		  error: function( xhr, tStatus, err ) {
		    if( xhr.status == 401) {
            	$(".debate[data-id="+ debate_id +"]").append('<br>');
				$(".debate[data-id="+ debate_id +"]").append("<div class='debate-message'> YOU HAVE BEEN SIGNED OUT DUE TO INACTIVITY. </div>");
			}
          } // end error handler
		});
		$(".debate[data-id="+ debate_id +"]").append('<br>');
		$(".debate[data-id="+ debate_id +"]").append("<div class='debate-message'> Refresh page to rejoin debate. </div>");
	}
	//return "DeBunky says ALWAYS CLICK LEAVE PAGE!";
	
	return;  

}
