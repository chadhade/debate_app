<span class="page-title"><h1><%= @debater.name %></h1></span>

<div class = "profile">
	<div class = "sidebar round">
		<%= render 'stats' %>
		<% if signed_in? %>
			<%= render 'follow_form' %>
			<%= render 'block_form' %>
		<% end %>
	</div>
</div>

<div class="profile_container">
	<h2>Total Debates: <%= @debates.count + @debater.judgings.count %></h2>
	<div class="profile_box">
		<h3>Debates Participated In: <%= @debates.count %></h3>
		<ul>
			<li> Won: <%= @debateswon %></li>
			<li> Lost: <%= @debateslost %></li>
			<li> No Judging Results: <%= @debatesnoresults %> </li> <br />
			
			<li> Upvotes: <%= @positivevotes %> (<%= @arguments == 0 ? 0 : (@positivevotes.to_f / @arguments) %> per argument)</li>
			<li> Downvotes: <%= @negativevotes %> (<%= @arguments == 0 ? 0 : (@negativevotes.to_f / @arguments) %> per argument)</li>
		</ul>
	</div>
	<div class="profile_box">
		<h3>Debates Judged: <%= @debater.judgings.count %> </h3>
		<ul>	
			<li>Judge Points: <%= @debater.judge_points %> </li>
		</ul>
	</div>
	<div class="profile_box">
		<h3>Recent Debates</h3>
		<ul>
			<% if @recentdebates.empty? %>
				You Have Not Participated in Any Debates!
			<% else %>
				<% @recentdebates.each do |debate| %>
					<% unless debate.tp.nil? %>
						<li> <%= link_to debate.tp.topic, debate %> </li>
					<% end %>
				<% end %>
			<% end %>
		</ul>
		
	</div>
</div>