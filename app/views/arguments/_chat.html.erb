<div class="chat_container">
	<div class= "name-chat">
		<% if argument.debater_id == judgeid %>
			judge
		<% else %>
			<% if debate.winner_id %>
				<%= argument.debater_id == debate.winner_id ? "winner" : "un-winner" %> 
			<% else %>
				<%= argument.debater.mini_name %>
			<% end %>
		<% end %>
	</div>
	
	<span class = "argument">: <%= argument.content %></span>
</div>