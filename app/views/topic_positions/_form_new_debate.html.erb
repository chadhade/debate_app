<div class="create_form_container">
	<%= form_for Argument.new, :url => {:controller => "debates", :action => "create"} do |f| %>
		<div class = "field">
			<h3>First Argument</h3> <br/>
			<%= f.text_area :content, :size => "36x5" %> <br />
			<%= f.label "Allotted Minutes" %> <br/>
			<%= f.number_field :time_left, :value => 10 %>
		</div>
		<%= f.hidden_field :topic_position_id, :value => @topic_position.id %>
		<div class = "action">
			<%= f.submit "Wait for Joiner" %>
		</div>	
	<% end %>
</div>