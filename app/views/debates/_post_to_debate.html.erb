<% unless currentdebater.nil? %>
	
	<% if debate.debaters.size == 1 %>
	  <%= render :partial => "debates/form_join_debate", :locals => {:debate => debate} if !debate.creator?(currentdebater) %>
	<% else %>
		<% if debate.judge and debate.current_turn?(currentdebater) %>
	  		<%= render :partial => "arguments/form_argument", :locals => {:debate => debate} %>
		<% else %>
			<% if debate.participant?(current_debater) and debate.status[:status_code] > 4 %>
				<%= render :partial => "arguments/form_chat", :locals => {:debate => debate} %>
			<% end %>
		<% end %>
	<% end %>

<% end %>