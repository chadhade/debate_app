<%-# list arguments for the debate %>
<% @arguments.each do |argument| %>
  <%= argument.content %> <br>
<% end %>  

<br>

<%-# allow new arguments %>
<%= form_for Argument.new do |f| %>
	<div class = "field">
		<%= f.label :content %> <br />
		<%= f.text_field :content %>
	</div>
	<%= f.hidden_field :debate_id, :value => @debate.id %>
	<div class = "action">
		<%= f.submit "argument" %>
	</div>	
<% end %>