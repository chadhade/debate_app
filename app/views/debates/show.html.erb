		var debate_id = $(".debate").attr("data-id");
		<% if @debate.creator == @currentdebater %>
			$.ajax({
		      type: "POST",
		      url: "/debates/" + debate_id + "/end_single.js",
			  success: function(){
		         //alert("First timer ended");
